<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.Light">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="defaultButtonHeight">56dp</item>
        <item name="android:fontFamily">@font/moderat_jit_regular</item>
        <item name="android:windowBackground">@color/window_color</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.EditTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxCornerRadiusTopEnd">0dp</item>
        <item name="boxCornerRadiusTopStart">0dp</item>
        <item name="boxCornerRadiusBottomEnd">0dp</item>
        <item name="boxCornerRadiusBottomStart">0dp</item>
        <item name="android:background">#FFF</item>
        <item name="hintEnabled">false</item>
    </style>

    <style name="AppTheme.EditTextInput">
        <item name="android:textSize">18sp</item>
        <item name="android:drawablePadding">10dp</item>
    </style>

    <style name="AppTheme.DetailsCardView">
        <item name="android:layout_marginTop">10dp</item>
        <item name="cardElevation">10dp</item>
        <item name="contentPaddingTop">30dp</item>
        <item name="contentPaddingBottom">20dp</item>
        <item name="android:layout_margin">10dp</item>
    </style>

    <style name="AppTheme.DetailsCardText">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/dark_text_color</item>
    </style>

    <style name="AppTheme.AppTitleText">
        <item name="android:textSize">50sp</item>
        <item name="android:layout_marginTop">30dp</item>
    </style>

    <style name="AppTheme.AppDescriptionText">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#767676</item>
    </style>

    <style name="AppTheme.TabLayoutStyle" parent="@style/Widget.MaterialComponents.TabLayout">
        <item name="android:background">#000</item>
        <item name="tabTextColor">@color/light_text_color</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
